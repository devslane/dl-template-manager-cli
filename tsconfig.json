{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "importHelpers": false,
        "moduleResolution": "node",
        "allowJs": true,
        "lib": ["es6", "es2015", "dom"],
        "declaration": true,
        "types": ["node"],
        "resolveJsonModule": true
    }
}
